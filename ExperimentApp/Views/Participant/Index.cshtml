@model IEnumerable<ExperimentApp.Models.Participant>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmotionalContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VideoPath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VideoEmotionsDataPath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AudioDataPath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UltimatumGavePercent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrustGavePercent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmotionalContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VideoPath)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VideoEmotionsDataPath)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AudioDataPath)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UltimatumGavePercent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrustGavePercent)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>